{
  "name": "Tube Trans - AI精翻字幕",
  "version": "1.0",
  "manifest_version": 3,
  "description": "一个使用AI模型翻译YouTube视频字幕的扩展",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["subtitle-engine.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": ["test.srt"],
      "matches": ["*://www.youtube.com/*"]
    }
  ]
}